# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = tab
indent_size = 4

# Tab indentation (no size specified)
[Makefile*]
indent_style = tab

# Windows-style newlines for LICENSES.txt
[LICENSES.txt]
end_of_line = crlf
